{
  "manifest_version": 3,
  "name": "Flappy Edge",
  "version": "1.0",
  "description": "Play Flappy Bird with smooth gameplay and persistent high score!",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
